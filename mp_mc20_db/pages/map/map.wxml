<!--pages/map/map.wxml-->
<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 500px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      circles="{{circles}}"
      show-location=False
    ></map>
  </view>
  <button id="bconn" bindtap="bws_conn" class="page-body-button" type="primary" disabled="{{b1en}}">连接服务器</button>
  <button id="bdisconn" bindtap="bws_disconn" class="page-body-button" type="primary" disabled="{{b2en}}">断开服务器</button>
